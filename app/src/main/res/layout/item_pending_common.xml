<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="pendingCommon"
            type="com.szbb.pro.entity.Order.MyOrderBean.ListEntity"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="66dp"
            android:paddingEnd="@dimen/large_margin_15dp"
            android:paddingStart="@dimen/large_margin_15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <TextView
                    style="@style/textStyle"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="6dp"
                    android:text="工单将于"
                    android:textColor="@color/color_text_gravy"
                    android:textSize="@dimen/text_normal_size"/>

                <TextView
                    android:id="@+id/tv_new_order_countdown"
                    style="@style/textStyle"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="6dp"
                    android:text="@{pendingCommon.appoint_drop_time}"
                    android:textColor="@color/color_orange_light"
                    android:textSize="@dimen/text_normal_size"/>

                <TextView
                    style="@style/textStyle"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="6dp"
                    android:text="后过时"
                    android:textColor="@color/color_text_gravy"
                    android:textSize="@dimen/text_normal_size"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_pending_operation_order"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_round_normal_blue_dark_selector"
                android:text="@string/pending_operate_order"
                android:textColor="@color/color_white"
                android:textSize="14sp"
                android:textStyle="bold"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_bg_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="97dp"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/large_margin_15dp"
            android:paddingStart="@dimen/large_margin_15dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:layout_marginTop="9dp"
                android:layout_weight="0.7"
                android:gravity="center_vertical"
                android:minHeight="59dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_new_order_client_name"
                        style="@style/textStyle"
                        android:text="@{pendingCommon.nickname}"/>

                    <TextView
                        style="@style/textStyle"
                        android:layout_marginStart="@dimen/small_margin_5dp"
                        android:layout_toEndOf="@id/tv_new_order_client_name"
                        android:text="@{pendingCommon.tel}"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp">

                    <TextView
                        android:id="@+id/tv_new_order_client_address"
                        style="@style/textStyle"
                        android:text="@string/address"
                        android:textColor="@color/color_text_dark"/>

                    <TextView
                        style="@style/textStyle"
                        android:layout_marginStart="@dimen/small_margin_5dp"
                        android:layout_toEndOf="@id/tv_new_order_client_address"
                        android:text="@{pendingCommon.address}"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp">

                    <TextView
                        android:id="@+id/tv_new_order_appointment_time"
                        style="@style/textStyle"
                        android:text="@string/appointment_time"/>

                    <TextView
                        style="@style/textStyle"
                        android:layout_marginStart="@dimen/small_margin_5dp"
                        android:layout_toEndOf="@id/tv_new_order_appointment_time"
                        android:text="@{pendingCommon.appoint_time}"
                        android:textColor="@color/color_orange_light"/>
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/middle_margin_10dp"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/ic_location_blue"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_bg_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="80dp"
            android:orientation="vertical"
            android:paddingEnd="@dimen/large_margin_15dp"
            android:paddingStart="@dimen/large_margin_15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_factory"/>

                <TextView
                    style="@style/textStyle"
                    android:layout_marginStart="@dimen/small_margin_5dp"
                    android:text="@{pendingCommon.fullType}"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llyt_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/middle_margin_10dp"
                android:orientation="horizontal"
                android:paddingEnd="40dp"
                android:paddingStart="30dp"/>
        </LinearLayout>
    </LinearLayout>
</layout>