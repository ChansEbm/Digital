<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data class=".SystemMsgLayout"/>

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/theme_primary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_bg_gravy"
            android:orientation="vertical">

            <include layout="@layout/title_bar"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:minHeight="125dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_white_gravy_selector"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:orientation="vertical"
                    android:id="@+id/llyt_order_msg">

                    <TextView
                        style="@style/textStyle"
                        android:drawablePadding="@dimen/small_margin_5dp"
                        android:drawableTop="@mipmap/ic_sys_order_msg"
                        android:gravity="center"
                        android:text="@string/label_sys_order_msg"/>
                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="125dp"
                    android:background="@color/color_bg_line"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_white_gravy_selector"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:orientation="vertical"
                    android:id="@+id/llyt_acce_msg">

                    <TextView
                        style="@style/textStyle"
                        android:drawablePadding="@dimen/small_margin_5dp"
                        android:drawableTop="@mipmap/ic_sys_acce_msg"
                        android:gravity="center"
                        android:text="@string/label_sys_acce_msg"/>
                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="125dp"
                    android:background="@color/color_bg_line"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_white_gravy_selector"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:orientation="vertical"
                    android:id="@+id/llyt_trade_msg">

                    <TextView
                        style="@style/textStyle"
                        android:drawablePadding="@dimen/small_margin_5dp"
                        android:drawableTop="@mipmap/ic_sys_translate_msg"
                        android:gravity="center"
                        android:text="@string/label_sys_trade_msg"/>
                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:minHeight="125dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_white_gravy_selector"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:orientation="vertical"
                    android:id="@+id/llyt_business_msg">

                    <TextView
                        style="@style/textStyle"
                        android:drawablePadding="@dimen/small_margin_5dp"
                        android:drawableTop="@mipmap/ic_sys_business_msg"
                        android:gravity="center"
                        android:text="@string/label_sys_business_msg"/>
                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="125dp"
                    android:background="@color/color_bg_line"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_white_gravy_selector"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:orientation="vertical"
                    android:id="@+id/llyt_guide">

                    <TextView
                        style="@style/textStyle"
                        android:drawablePadding="@dimen/small_margin_5dp"
                        android:drawableTop="@mipmap/ic_sys_guide"
                        android:gravity="center"
                        android:text="@string/label_sys_guide"/>
                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="125dp"
                    android:background="@color/color_bg_line"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_white_gravy_selector"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:orientation="vertical"
                    android:id="@+id/llyt_act_msg">

                    <TextView
                        style="@style/textStyle"
                        android:drawablePadding="@dimen/small_margin_5dp"
                        android:drawableTop="@mipmap/ic_sys_activity_msg"
                        android:gravity="center"
                        android:text="@string/label_sys_activity_msg"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</layout>