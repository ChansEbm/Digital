<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginEnd="@dimen/large_margin_15dp"
              android:orientation="vertical">

    <cn.bingoogolapple.badgeview.BGABadgeTextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_customer_service"
        android:textColor="@color/color_white"
        android:textSize="@dimen/text_normal_size"
        android:textStyle="bold"
        app:badge_bgColor="@color/color_text_red"
        app:badge_gravity="rightTop"
        app:badge_horizontalMargin="0dp"
        app:badge_verticalMargin="0dp"/>
</LinearLayout>