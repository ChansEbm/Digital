<?xml version="1.0" encoding="utf-8"?>
<!--配件申请item Co-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:minHeight="64dp"
                android:paddingEnd="@dimen/large_margin_15dp"
                android:paddingStart="@dimen/large_margin_15dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_apply_fitting_no"
            style="@style/textStyle"
            android:text="123"/>

        <TextView
            android:id="@+id/tv_item_apply_fitting_time"
            style="@style/textStyle"
            android:layout_marginTop="11dp"
            android:text="123"
            android:textColor="@color/color_text_gravy"/>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_arrow_right"/>

</RelativeLayout>