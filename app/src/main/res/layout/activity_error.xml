<?xml version="1.0" encoding="utf-8"?>
<layout>

	<data class=".ErrorLayout"/>

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
				  android:layout_width="match_parent"
				  android:layout_height="match_parent"
				  android:background="@color/color_bg_gravy"
				  android:gravity="center"
				  android:orientation="vertical">

		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:src="@mipmap/error"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_marginTop="@dimen/large_margin_15dp"
			android:text="@string/error_hint"
			android:textSize="@dimen/text_large_size"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/large_margin_15dp"
			android:orientation="horizontal">

			<Button
				android:id="@+id/btn_error_shutdown"
				style="@style/buttonStyle"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:background="@drawable/bg_blue_dark_selector"
				android:onClick="onClick"
				android:text="@string/error_quit"
				android:textSize="@dimen/text_large_size"/>

			<Button
				android:id="@+id/btn_error_restart"
				style="@style/buttonStyle"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:background="@drawable/bg_blue_dark_selector"
				android:onClick="onClick"
				android:text="@string/error_restart_app"
				android:textSize="@dimen/text_large_size"/>

		</LinearLayout>

		<TextView
			android:id="@+id/tv_imei"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/middle_margin_10dp"
			android:text="123"
			android:textSize="@dimen/text_large_size"/>

		<TextView
			android:id="@+id/tv_date"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/middle_margin_10dp"
			android:text="123"
			android:textSize="@dimen/text_large_size"/>
	</LinearLayout>
</layout>