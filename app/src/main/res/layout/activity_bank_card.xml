<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data class=".BankCardLayout">

        <variable
            name="card"
            type="com.szbb.pro.entity.Vip.BankCardBean.DataEntity"/>
    </data>

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/theme_primary"
        tools:context=".ui.Activity.Vip.Wallet.BankCardActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_bg_gravy"
            android:orientation="vertical">

            <include layout="@layout/title_bar"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/color_white"
                                android:minHeight="100dp"
                                android:padding="@dimen/large_margin_15dp">

                    <TextView
                        android:id="@+id/tv_t1"
                        style="@style/textStyle"
                        android:gravity="start"
                        android:text="@{card.bank_name}"
                        android:textSize="@dimen/text_large_size"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tv_t2"
                        style="@style/textStyle"
                        android:layout_below="@id/tv_t1"
                        android:text="123"
                        android:textColor="@color/color_text_gravy"
                        android:textSize="@dimen/text_small_size"
                    />

                    <TextView
                        style="@style/textStyle"
                        android:layout_below="@id/tv_t2"
                        android:layout_marginTop="25dp"
                        android:text="@{card.credit_card}"
                        android:textSize="@dimen/text_large_size"
                        />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_empty_content"
                    android:visibility="gone"/>
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>
</layout>