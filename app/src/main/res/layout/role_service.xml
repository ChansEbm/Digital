<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class=".RoleServiceLayout">

        <import type="android.view.View"/>

        <variable
            name="service"
            type="com.szbb.pro.entity.order.OrderMsgListBean.ListEntity"/>
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="horizontal"
        android:paddingStart="@dimen/small_margin_5dp"
        android:paddingTop="@dimen/small_margin_5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/small_margin_5dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sdv_avatar"
                style="@style/DefaultSimpleDraweeView"
                android:layout_width="44dp"
                android:layout_height="44dp"
                app:roundAsCircle="true"/>

            <TextView
                style="@style/textStyle"
                android:text="@{service.nickname}"
                android:textColor="@color/color_text_gravy"
                android:textSize="9sp"/>
        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/role_service_text_bg"
                android:orientation="vertical"
                app:visibility='@{service.type.equals("1")?View.VISIBLE:View.GONE}'>

                <TextView
                    style="@style/textStyle"
                    android:maxEms="12"
                    android:text="@{service.content}"
                    />

                <TextView
                    style="@style/textStyle"
                    android:layout_marginTop="@dimen/middle_margin_10dp"
                    android:text="@{service.addtime}"
                    android:textColor="@color/color_white"
                    android:textSize="11sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/role_service_text_bg"
                android:orientation="vertical"
                app:visibility='@{service.type.equals("0")?View.VISIBLE:View.GONE}'>

                <com.bm.library.PhotoView
                    android:id="@+id/role_photoView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:scaleType="centerCrop"
                    android:tag="@{service.img}"
                    app:photoSrc="@{service.img}"/>

                <TextView
                    style="@style/textStyle"
                    android:layout_marginTop="@dimen/middle_margin_10dp"
                    android:text="@{service.addtime}"
                    android:textColor="@color/color_white"
                    android:textSize="11sp"
                    />
            </LinearLayout>

        </FrameLayout>
    </LinearLayout>
</layout>