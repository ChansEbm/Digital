<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/color_orange_press"/>
            <corners android:radius="5dp"/>
            <solid android:color="@color/color_orange_press"/>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/color_white"/>
            <corners android:radius="5dp"/>
            <solid android:color="@color/color_white"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/color_orange_normal"/>
            <corners android:radius="5dp"/>
            <solid android:color="@color/color_orange_normal"/>
        </shape>
    </item>
</selector>